<odoo>
    <record id="view_pet_booking_tree" model="ir.ui.view">
        <field name="name">pet.booking.tree</field>
        <field name="model">pet.booking</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'confirmed'" decoration-warning="state == 'in_progress'" decoration-success="state == 'done'" decoration-muted="state == 'draft'" decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="booking_date"/>
                <field name="partner_id"/>
                <field name="pet_id"/>
                <field name="amount_total" widget="monetary" decoration-bf="1"/>
                <field name="state" widget="badge" decoration-info="state == 'confirmed'" decoration-warning="state == 'in_progress'" decoration-success="state == 'done'" decoration-muted="state == 'draft'" decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_pet_booking_kanban" model="ir.ui.view">
        <field name="name">pet.booking.kanban</field>
        <field name="model">pet.booking</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="booking_date"/>
                <field name="state"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-6">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="col-6 text-end">
                                    <strong><field name="amount_total" widget="monetary"/></strong>
                                </div>
                            </div>
                            <div class="row mb4">
                                <div class="col-12">
                                    <span><field name="partner_id"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <field name="booking_date"/>
                                </div>
                                <div class="col-6 text-end">
                                    <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'cancel': 'danger', 'confirmed': 'info', 'in_progress': 'warning', 'done': 'success'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_pet_booking_form" model="ir.ui.view">
        <field name="name">pet.booking.form</field>
        <field name="model">pet.booking</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start_work" string="Start Work" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet readonly="state in ['done', 'cancel']">
                    <widget name="web_ribbon" title="Paid" bg_color="text-bg-success" invisible="state != 'done'"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-danger" invisible="state != 'cancel'"/>
                    
                    <div class="oe_title">
                        <span class="o_form_label">Service Ticket</span>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="client_details" string="Client &amp; Pet">
                            <field name="partner_id" widget="res_partner_many2one" context="{'show_address': 1}" options='{"always_reload": True}'/>
                            <field name="pet_id" context="{'default_owner_id': partner_id}"/>
                        </group>
                        <group name="transaction_details" string="Transaction Info">
                            <field name="booking_date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Services &amp; Products" name="services_page">
                            <field name="booking_line_ids" widget="section_and_note_one2many" readonly="state == 'done'">
                                <tree editable="bottom">
                                    <field name="product_id" widget="many2one_avatar"/>
                                    <field name="name"/>
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" widget="monetary" decoration-bf="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_pet_booking_pivot" model="ir.ui.view">
        <field name="name">pet.booking.pivot</field>
        <field name="model">pet.booking</field>
        <field name="arch" type="xml">
            <pivot string="Revenue Analysis">
                <field name="booking_date" type="row"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_pet_booking_graph" model="ir.ui.view">
        <field name="name">pet.booking.graph</field>
        <field name="model">pet.booking</field>
        <field name="arch" type="xml">
            <graph string="Revenue by Pet" type="bar">
                <field name="pet_id"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_pet_booking_search" model="ir.ui.view">
        <field name="name">pet.booking.search</field>
        <field name="model">pet.booking</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="pet_id"/>
                <filter string="Today" name="today" domain="[('booking_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Unpaid" name="unpaid" domain="[('state', '!=', 'done')]"/>
                <filter string="My Bookings" name="my_bookings" domain="[('create_uid', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Booking Date" name="groupby_date" context="{'group_by': 'booking_date'}"/>
                    <filter string="Customer" name="groupby_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Pet" name="groupby_pet" context="{'group_by': 'pet_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
