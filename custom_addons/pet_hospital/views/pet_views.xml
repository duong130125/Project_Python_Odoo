<odoo>
    <record id="view_pet_form" model="ir.ui.view">
        <field name="name">pet.pet.form</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_medical_history" type="object" class="oe_stat_button" icon="fa-stethoscope">
                            <field name="medical_count" widget="statinfo" string="Medical"/>
                        </button>
                        <button name="action_view_bookings" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="booking_count" widget="statinfo" string="Bookings"/>
                        </button>
                    </div>
                    
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" string="Pet Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Milo"/>
                        </h1>
                        <h3>
                            <field name="code" readonly="1"/>
                        </h3>
                    </div>

                    <group>
                        <group>
                            <span class="o_form_label o_td_label" name="address_name">
                                <b>Pet Classification</b>
                            </span>
                            <div class="o_address_format">
                                <field name="type_id" placeholder="Type" class="o_address_street"/>
                                <field name="breed_id" placeholder="Breed" class="o_address_street"/>
                            </div>
                        </group>
                        <group>
                            <field name="spa_count"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Profile &amp; Owner" name="profile_page">
                            <group>
                                <group string="Identity" name="identity_group">
                                    <field name="dob"/>
                                    <field name="age"/>
                                </group>
                                <group string="Owner Information" name="owner_group">
                                    <field name="owner_id" widget="res_partner_many2one" context="{'show_address': 1}" options='{"always_reload": True}'/>
                                    <field name="owner_phone" widget="phone"/>
                                    <field name="owner_address"/>
                                </group>
                            </group>
                        </page>
                        <page string="Medical Board" name="medical_page">
                            <div class="row">
                                <div class="col-6">
                                    <separator string="Vaccination Schedule"/>
                                    <field name="vaccination_ids" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="date"/>
                                            <field name="next_date"/>
                                        </tree>
                                    </field>
                                </div>
                                <div class="col-6">
                                    <separator string="Medical History Log"/>
                                    <field name="medical_history_ids" nolabel="1">
                                        <tree>
                                            <field name="date"/>
                                            <field name="diagnosis"/>
                                            <field name="doctor_id"/>
                                        </tree>
                                    </field>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_pet_tree" model="ir.ui.view">
        <field name="name">pet.pet.tree</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image" widget="image" options='{"size": [40, 40]}' string="Photo"/>
                <field name="code"/>
                <field name="name" decoration-bf="1"/>
                <field name="owner_id"/>
                <field name="type_id" widget="badge"/>
                <field name="breed_id"/>
                <field name="age"/>
                <field name="spa_count" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_pet_kanban" model="ir.ui.view">
        <field name="name">pet.pet.kanban</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="image"/>
                <field name="breed_id"/>
                <field name="age"/>
                <field name="type_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_card">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('pet.pet', 'image', record.id.raw_value)" alt="Pet" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span class="badge rounded-pill text-bg-info"><field name="type_id"/></span>
                                </div>
                                <ul>
                                    <li>Code: <field name="code"/></li>
                                    <li>Breed: <field name="breed_id"/></li>
                                    <li>Age: <field name="age"/> years</li>
                                    <li>Owner: <field name="owner_id"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_pet_search" model="ir.ui.view">
        <field name="name">pet.pet.search</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="breed_id"/>
            </search>
        </field>
    </record>
    <record id="view_pet_medical_history_tree" model="ir.ui.view">
        <field name="name">pet.medical.history.tree</field>
        <field name="model">pet.medical.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="diagnosis"/>
                <field name="doctor_id"/>
                <field name="pet_id"/>
            </tree>
        </field>
    </record>

    <record id="view_pet_medical_history_form" model="ir.ui.view">
        <field name="name">pet.medical.history.form</field>
        <field name="model">pet.medical.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="diagnosis"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="pet_id"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Treatment Description..."/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
