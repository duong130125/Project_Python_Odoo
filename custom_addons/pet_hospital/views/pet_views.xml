<odoo>
    <record id="view_pet_form" model="ir.ui.view">
        <field name="name">pet.pet.form</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image" widget="image"/>
                        <field name="name"/>
                        <field name="dob"/>
                        <field name="age" readonly="1"/>
                    </group>

                    <group string="Owner Information">
                        <field name="owner_id"/>
                        <field name="owner_phone" readonly="1"/>
                        <field name="owner_address" readonly="1"/>
                    </group>

                    <group string="Pet Classification">
                        <field name="type_id"/>
                        <field name="breed_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_pet_tree" model="ir.ui.view">
        <field name="name">pet.pet.tree</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="type_id"/>
                <field name="breed_id"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="view_pet_kanban" model="ir.ui.view">
        <field name="name">pet.pet.kanban</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="image"/>
                <field name="breed_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('pet.pet', 'image', record.id.raw_value)" alt="Pet"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="breed_id"/>
                                </div>
                                <div>
                                    <field name="owner_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_pet_search" model="ir.ui.view">
        <field name="name">pet.pet.search</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="breed_id"/>
            </search>
        </field>
    </record>
</odoo>
