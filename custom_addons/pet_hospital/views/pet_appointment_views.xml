<odoo>
    <record id="view_pet_appointment_calendar" model="ir.ui.view">
        <field name="name">pet.appointment.calendar</field>
        <field name="model">pet.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="date_start" date_stop="date_end" color="state">
                <field name="pet_id"/>
                <field name="partner_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_pet_appointment_form" model="ir.ui.view">
        <field name="name">pet.appointment.form</field>
        <field name="model">pet.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pet_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Description..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pet_appointment_tree" model="ir.ui.view">
        <field name="name">pet.appointment.tree</field>
        <field name="model">pet.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'confirmed'" decoration-muted="state == 'done'">
                <field name="name"/>
                <field name="date_start"/>
                <field name="pet_id"/>
                <field name="partner_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
</odoo>
