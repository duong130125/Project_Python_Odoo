<odoo>
    <record id="view_pet_appointment_calendar" model="ir.ui.view">
        <field name="name">pet.appointment.calendar</field>
        <field name="model">pet.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="date_start" date_stop="date_end" color="state">
                <field name="pet_id"/>
                <field name="partner_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_pet_appointment_kanban" model="ir.ui.view">
        <field name="name">pet.appointment.kanban</field>
        <field name="model">pet.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false" sample="1">
                <field name="name"/>
                <field name="state"/>
                <field name="pet_id"/>
                <field name="partner_id"/>
                <field name="date_start"/>
                <progressbar field="state" colors='{"done": "success", "confirmed": "info", "draft": "muted", "cancel": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-1">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title text-primary">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-muted mb-2">
                                    <span class="fa fa-paw me-1"/> <field name="pet_id" class="fw-bold"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <small class="text-muted"><i class="fa fa-clock-o me-1"/> <field name="date_start"/></small>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="partner_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_pet_appointment_form" model="ir.ui.view">
        <field name="name">pet.appointment.form</field>
        <field name="model">pet.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['draft', 'confirmed']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet readonly="state in ['done', 'cancel']">
                    <widget name="web_ribbon" title="Completed" bg_color="text-bg-success" invisible="state != 'done'"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-danger" invisible="state != 'cancel'"/>

                    <div class="oe_title">
                        <label for="name" string="Appointment Code"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Who &amp; Where">
                            <field name="pet_id" widget="many2one_avatar"/>
                            <field name="partner_id" widget="res_partner_many2one" context="{'show_address': 1}" options='{"always_reload": True}'/>
                        </group>
                        <group string="When">
                            <field name="date_start" widget="daterange" options="{'end_date_field': 'date_end'}"/>
                            <field name="date_end" invisible="1"/>
                        </group>
                    </group>
                    <separator string="Doctor's Notes / Instructions"/>
                    <field name="description" placeholder="Enter clinical notes or special instructions for this appointment..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pet_appointment_tree" model="ir.ui.view">
        <field name="name">pet.appointment.tree</field>
        <field name="model">pet.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'confirmed'" decoration-success="state == 'done'" decoration-muted="state == 'draft'" decoration-danger="state == 'cancel'">
                <field name="name" decoration-bf="1"/>
                <field name="date_start"/>
                <field name="pet_id"/>
                <field name="partner_id"/>
                <field name="state" widget="badge" decoration-info="state == 'confirmed'" decoration-success="state == 'done'" decoration-muted="state == 'draft'" decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>
</odoo>
