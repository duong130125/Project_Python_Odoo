<odoo>
    <record id="action_pet_pet" model="ir.actions.act_window">
        <field name="name">Pets</field>
        <field name="res_model">pet.pet</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first pet
            </p>
        </field>
    </record>

    <record id="action_pet_type" model="ir.actions.act_window">
        <field name="name">Pet Types</field>
        <field name="res_model">pet.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_pet_breed" model="ir.actions.act_window">
        <field name="name">Pet Breeds</field>
        <field name="res_model">pet.breed</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_pet_booking" model="ir.actions.act_window">
        <field name="name">Bookings</field>
        <field name="res_model">pet.booking</field>
        <field name="view_mode">kanban,tree,form,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first booking
            </p>
        </field>
    </record>

    <record id="action_pet_appointment_tree" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">pet.appointment</field>
        <field name="view_mode">calendar,kanban,tree,form</field>
    </record>

    <menuitem id="menu_pet_hospital_root"
              name="Pet Hospital"
              sequence="10"/>

    <menuitem id="menu_pet_pet"
              name="Thú cưng"
              parent="menu_pet_hospital_root"
              action="action_pet_pet"
              sequence="10"/>

    <menuitem id="menu_pet_operations"
              name="Đặt lịch"
              parent="menu_pet_hospital_root"
              sequence="20"/>

    <menuitem id="menu_pet_booking"
              name="Phiếu Dịch vụ"
              parent="menu_pet_operations"
              action="action_pet_booking"
              sequence="10"/>

    <menuitem id="menu_pet_appointment"
              name="Lịch khám"
              parent="menu_pet_operations"
              action="action_pet_appointment_tree"
              sequence="20"/>

    <record id="action_pet_service_product" model="ir.actions.act_window">
        <field name="name">Dịch vụ</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_pet_service', '=', True)]</field>
    </record>

    <menuitem id="menu_pet_services"
              name="Dịch vụ"
              parent="menu_pet_hospital_root"
              action="action_pet_service_product"
              sequence="30"/>

    <menuitem id="menu_pet_reporting"
              name="Báo cáo"
              parent="menu_pet_hospital_root"
              sequence="40"/>

    <menuitem id="menu_pet_configuration"
              name="Cấu hình"
              parent="menu_pet_hospital_root"
              sequence="50"/>

    <menuitem id="menu_pet_type"
              name="Loại thú cưng"
              parent="menu_pet_configuration"
              action="action_pet_type"
              sequence="10"/>

    <menuitem id="menu_pet_breed"
              name="Giống loài"
              parent="menu_pet_configuration"
              action="action_pet_breed"
              sequence="20"/>
</odoo>
