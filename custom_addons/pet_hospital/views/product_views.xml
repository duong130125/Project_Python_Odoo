<odoo>
    <record id="product_template_form_inherit_pet" model="ir.ui.view">
        <field name="name">product.template.form.pet</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Pet">
                    <group>
                        <field name="is_pet_service"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">pet_hospital.group_pet_manager</attribute>
            </xpath>
        </field>
    </record>


    <record id="product_template_tree_inherit_pet" model="ir.ui.view">
        <field name="name">product.template.tree.pet</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">pet_hospital.group_pet_manager</attribute>
            </xpath>
        </field>
    </record>
</odoo>
