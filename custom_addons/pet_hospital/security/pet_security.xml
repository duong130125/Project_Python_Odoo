<odoo>
    <record id="module_category_pet_hospital" model="ir.module.category">
        <field name="name">Pet Hospital</field>
        <field name="description">Helps you manage your pet hospital.</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_pet_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_pet_hospital"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_pet_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_pet_hospital"/>
        <field name="implied_ids" eval="[(4, ref('group_pet_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="pet_booking_user_rule" model="ir.rule">
        <field name="name">Personal Bookings</field>
        <field name="model_id" ref="model_pet_booking"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_pet_user'))]"/>
    </record>

    <record id="pet_booking_manager_rule" model="ir.rule">
        <field name="name">All Bookings</field>
        <field name="model_id" ref="model_pet_booking"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_pet_manager'))]"/>
    </record>

    <record id="pet_medical_history_user_rule" model="ir.rule">
        <field name="name">User: No Delete Medical History</field>
        <field name="model_id" ref="model_pet_medical_history"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_pet_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
